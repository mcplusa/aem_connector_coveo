      </dependency>

      <dependency>
        <groupId>commons-beanutils</groupId>
        <artifactId>commons-beanutils</artifactId>
        <version>1.9.2</version>
      </dependency>
      <dependency>
        <groupId>io.wcm.caravan</groupId>
        <artifactId>io.wcm.caravan.commons.httpclient</artifactId>
        <version>1.1.0</version>
